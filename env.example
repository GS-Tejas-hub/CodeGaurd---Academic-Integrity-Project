# CodeGuard Environment Configuration
# Copy this file to .env and fill in your API keys

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys (Required)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Get from: https://console.cloud.google.com/apis/credentials
# Create a Custom Search Engine at: https://cse.google.com/
GOOGLE_CSE_ID=your_google_cse_id_here
GOOGLE_API_KEY=your_google_api_key_here

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Stack Overflow API (free tier available)
# Get from: https://api.stackexchange.com/
STACKOVERFLOW_API_KEY=your_stackoverflow_key_here

# Database Configuration (Optional - for user management)
MONGODB_URI=your_mongodb_uri_here
JWT_SECRET=your_jwt_secret_here

# File Storage Configuration
UPLOAD_DIR=./uploads
REPORT_DIR=./reports
MAX_FILE_SIZE=50mb

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analysis Configuration
SIMILARITY_THRESHOLD=0.3
AI_DETECTION_CONFIDENCE=0.7
MAX_SEARCH_RESULTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/codeguard.log 